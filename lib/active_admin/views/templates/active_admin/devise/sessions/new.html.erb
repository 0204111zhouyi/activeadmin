<div id="login">
  <h2><%= title "#{ActiveAdmin.site_title} Login" %></h2>

  <%= active_admin_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => "session_new" }) do |f| 
    f.inputs do
      f.input :email
      f.input :password
      f.input :remember_me, :as => :boolean, :if =>  false  #devise_mapping.rememberable? }
    end
    f.buttons do
      f.commit_button "Login"
    end
  end
  %>

  <%= render :partial => "devise/shared/links" %>
</div>
