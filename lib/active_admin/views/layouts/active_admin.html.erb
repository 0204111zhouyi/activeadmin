<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
 
  <title><%= [@page_title, ActiveAdmin.site_title].join(" | ") %></title>

  <style type="text/less">
    @import "/stylesheets/active_admin.less";
  </style>
  <script src="/javascripts/less.min.js" type="text/javascript"></script>

  <%= javascript_include_tag *ActiveAdmin.javascripts %>
  <%= csrf_meta_tag %>

</head>
<body class="<%= controller.action_name %>">
<div id="wrapper">
  <div id="header">
    <%= yield :header %>
  </div>
  <div id="title_bar">
    <%= yield :title_bar %>
  </div>
  <div id="content" class="<%= skip_sidebar? ? 'without_sidebar' : 'with_sidebar' %>">
    <%= flash_messages %>
    <div id="main_content_wrapper">
      <div id="main_content">
        <%= yield %>
      </div>
    </div>
    <% unless skip_sidebar? %>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    <% end %>
  </div>
  <div id="footer">
    <%= yield :footer %>
  </div>
</div>
</body>
</html>
